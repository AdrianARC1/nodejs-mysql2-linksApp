<div class="container p-4">
    <div class="row">
        {{#each links}}
            <div class="col-md3">
                <div class="card text-center">
                    <div class="card-body">
                        <a href="{{url}}">
                            <h3 class="card-title text-uppercase">{{title}}</h3>
                        </a>
                        <p class="m-2">{{description}}</p>
                        <p class="m-2">{{timeago created_at}}</p>
                        <a href="/links/delete/{{id}}" class="btn btn-danger"><i class="fa-solid fa-trash"></i>Delete</a>
                        <a href="/links/edit/{{id}}" class="btn btn-secondary"><i class="fa-solid fa-pen-to-square"></i>Edit</a>
                        </div>
                </div>
            </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card-body text-center card">
                <p>No hay links guardados que podamos mostrar.</p>
                <a href="/links/add"><h1>Crear uno</h1></a>
            </div>
        </div>
        {{/each}}
    </div>
</div>