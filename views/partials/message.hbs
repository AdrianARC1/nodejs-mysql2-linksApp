    {{#if success}}
        <div class="container">
            <div class="row">
                <div class="alert alert-success alert dismissible fade show">
                    {{success}}
                    <button class="close" type="button" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    {{/if}}